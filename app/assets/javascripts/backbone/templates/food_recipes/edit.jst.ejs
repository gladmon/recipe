<form role="form" onSubmit="return false;">
  <div class="row">
    <div class="col-sm-6">
      <div class="col-sm-12">
        <div class="form-group">
          <label for="name" class="control-label">Name</label>
          <input type="text" class="form-control" name="name" id="name" placeholder="Name" />
        </div>
      </div>
      <div class="col-sm-4">
        <div class="form-group">
          <label for="prep_time" class="control-label">Prep Time</label>
          <input type="text" class="form-control" name="prep_time" id="prep_time" placeholder="60 seconds?">
        </div>
      </div>
      <div class="col-sm-4">
        <div class="form-group">
          <label for="servings" class="control-label">Servings</label>
          <input type="text" class="form-control" name="servings" id="servings" placeholder="e.g. 5">
        </div>
      </div>
      <div class="col-sm-4">
        <div class="form-group">
          <label for="recipe_from" class="control-label">From</label>
          <input type="text" class="form-control" name="recipe_from" id="recipe_from" placeholder="Who or where from">
        </div>
      </div>
    </div>

    <div class="col-sm-6">
      <div class="col-sm-12">
        <div class="form-group">
          <label for="description" class="control-label">Description</label>
          <textarea type="text" class="form-control" name="description" id="description" placeholder="Description of this recipe"></textarea>
        </div>
      </div>  
    </div>
  </div>
  
  <hr />
  
  <div class="row">
    <div class="col-sm-6">
      <div class="col-sm-12">
        <div class="form-group">
          <label for="ingredients" class="control-label">Ingredients</label>
          <textarea type="text" class="form-control" name="ingredients" id="ingredients" placeholder="Ingredients of this recipe"></textarea>
        </div>
      </div>  
    </div>
    <div class="col-sm-6">
      <div class="col-sm-12">
        <div class="form-group">
          <label for="steps" class="control-label">Steps</label>
          <textarea type="text" class="form-control" name="steps" id="steps" placeholder="Steps to make this recipe"></textarea>
        </div>
      </div>  
    </div>
  </div>
 
   
  
  
  <div class="form-group">
    <div  id="errors" class="col-sm-12 text-danger">
       Please fix the following errors before saving this recipe:
       <ul id="errorList"></ul>
    </div>
    <div class="col-sm-12 center-block">
      <button type="submit" class="btn btn-default saveBtn">Save</button>
    </div>
  </div>
</form>
